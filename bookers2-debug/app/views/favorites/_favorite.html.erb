

<% if book.favorited_by?(current_user) %>

    <%= link_to book_favorites_path(book), method: :delete,class: "glyphicon glyphicon-heart" do %>

    <%= book.favorites.count %>
    <% end %>

<% else %>

    <%= link_to book_favorites_path(book), method: :post,class: "glyphicon glyphicon-heart-empty" do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= book.favorites.count %>
    <% end %>

<% end %>